function ConfirmaBorrar(idformulario, id)
{
	var respuesta=confirm('¿Realmente desea borrar este registro?')					
	if (respuesta==true)
	{
		document.getElementById(idformulario).idregistro.value = id;
		document.getElementById(idformulario).submit()
	}			
}

